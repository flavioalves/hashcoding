extends ../layouts/layout

block content
	p.tagline
		| O que os brasileiros dizem nas manifestações pelo país?
	#box-container

	button#load-more.btn Ver mais

	script
		$(function() {
			$('#box-container').masonry({
				itemSelector : '.box',
				columnWidth : 220,
				gutterWidth : 20,
				isAnimated : true
			});
			$('#load-more').button().click(function() {
				var btn = $(this);
				btn.button('loading');
				ocupabrasil.currentPage += 1;
				ocupabrasil.loadSocialMentions(ocupabrasil.currentPage, function() {
					btn.button('reset');
				}, '/mentions');
			});
		});
